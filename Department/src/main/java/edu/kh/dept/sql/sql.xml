<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	
	<!-- 모든 부서 조회 -->
	<entry key="selectAll">
		SELECT * FROM DEPARTMENT4
		ORDER BY DEPT_ID ASC
	</entry>
	
	<!-- 부서 추가 -->
	<entry key="insertDepartment">
		INSERT INTO DEPARTMENT4
		VALUES(?, ?, ?)
	</entry>
	
	<!-- 부서 삭제 -->
	<entry key="deleteDepartment">
		DELETE FROM DEPARTMENT4
		WHERE DEPT_ID = ?
	</entry>

	
	
	<!-- 수정 -->
	<entry key = "selectOne">
	SELECT * FROM DEPARTMENT4
	WHERE DEPT_ID = ?
	</entry>
	
	<entry key = "updateDepartment">
	UPDATE DEPARTMENT4 
	SET DEPT_TITLE = ?, LOCATION_ID = ?
	WHERE DEPT_ID = ?
	</entry>
	
	<entry key = "searchDepartment">
	SELECT * FROM DEPARTMENT4 
	WHERE DEPT_TITLE LIKE
	'%' || ? || '%'
	</entry>
	
</properties>